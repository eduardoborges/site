---
import Base from "../../layouts/Base.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = (await getCollection("posts")).filter(
    (p) => import.meta.env.DEV || !p.data.draft,
  );
  return posts.map((post) => ({
    params: { slug: post.data.slug || post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
const slug = post.data.slug || post.id;
const permalink = `https://eduardoborges.dev/posts/${slug}`;

const formatDate = (date: Date) =>
  date.toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
    year: "numeric",
  });

const jsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: post.data.title,
  datePublished: post.data.date.toISOString(),
  url: permalink,
  author: {
    "@type": "Person",
    name: "Eduardo Borges",
    url: "https://eduardoborges.dev",
  },
  ...(post.data.description && { description: post.data.description }),
  ...(post.data.tags?.length && { keywords: post.data.tags.join(", ") }),
});
---

<Base
  title={post.data.title}
  description={post.data.description}
  article={{
    publishedTime: post.data.date.toISOString(),
    tags: post.data.tags,
  }}
>
  <main>
    <article>
      <div class="title">
        <h1>{post.data.title}</h1>
        <div class="meta">
          postado em <time datetime={post.data.date.toISOString()}
            >{formatDate(post.data.date)}</time
          >
          {post.data.draft && <span class="draft-label">rascunho</span>}
        </div>
        <small>
          compartilhe no
          <a
            href={`https://www.linkedin.com/sharing/share-offsite/?url=${permalink}`}
            target="_blank"
            rel="noopener noreferrer">linkedin</a
          >
        </small>
      </div>

      {
        post.data.tldr && (
          <div class="tldr">
            <strong>tl;dr:</strong> {post.data.tldr}
          </div>
        )
      }

      <section class="body">
        <Content />
      </section>

      {
        post.data.tags && post.data.tags.length > 0 && (
          <div class="post-tags">
            <nav aria-label="tags do post">
              <ul class="tags">
                {post.data.tags.map((tag) => (
                  <li>
                    <a href={`/tags/${tag}`}>{tag}</a>
                  </li>
                ))}
              </ul>
            </nav>
          </div>
        )
      }
    </article>
  </main>

  <script type="application/ld+json" set:html={jsonLd} />
</Base>
